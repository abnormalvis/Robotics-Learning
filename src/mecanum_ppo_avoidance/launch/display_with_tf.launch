<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <!-- ==================== 启动参数 ==================== -->
  <!-- Gazebo 相关参数 -->
  <arg name="paused" default="false"/>
  <arg name="use_sim_time" default="true"/>
  <arg name="gui" default="true"/>
  <arg name="headless" default="false"/>
  <arg name="debug" default="false"/>
  <arg name="verbose" default="true"/>
  <arg name="world_name" default="$(find mecanum_ppo_avoidance)/worlds/empty.world"/>
  
  <!-- 机器人模型参数 -->
  <arg name="load_chassis" default="true"/>
  <arg name="load_gimbal" default="false"/>
  <arg name="load_shooter" default="false"/>
  <arg name="roller_type" default="simple" doc="simple or realistic"/>
  <arg name="use_simulation" default="true"/>
  
  <!-- 机器人初始位姿 -->
  <arg name="x_pos" default="0"/>
  <arg name="y_pos" default="0"/>
  <arg name="z_pos" default="0.1"/>
  <arg name="R_pos" default="0"/>
  <arg name="P_pos" default="0"/>
  <arg name="Y_pos" default="0"/>
  
  <!-- RViz 相关参数 -->
  <arg name="is_open_rviz" default="true"/>
  <arg name="rvizconfig" default="$(find mecanum_ppo_avoidance)/rviz/mecanum_display.rviz"/>
  
  <!-- 是否启用 joint_state_publisher（关键：解决TF树问题） -->
  <arg name="use_joint_state_publisher" default="true"/>
  
  <!-- Ground Truth 里程计：使用 Gazebo 真实位姿替代轮式里程计 -->
  <arg name="use_ground_truth_odom" default="false"/>
  
  <!-- IMU 仿真模块 -->
  <arg name="load_imu" default="false"/>

  <!-- ==================== 加载机器人URDF模型到参数服务器 ==================== -->
  <param name="robot_description"
         command="$(find xacro)/xacro '$(find mecanum_ppo_avoidance)/urdf/hero2.urdf.xacro' 
                  load_chassis:=$(arg load_chassis) 
                  load_gimbal:=$(arg load_gimbal) 
                  load_shooter:=$(arg load_shooter) 
                  use_simulation:=$(arg use_simulation)
                  roller_type:=$(arg roller_type)" />

  <!-- ==================== 启动Gazebo仿真环境 ==================== -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(arg world_name)"/>
    <arg name="debug" value="$(arg debug)"/>
    <arg name="gui" value="$(arg gui)"/>
    <arg name="paused" value="$(arg paused)"/>
    <arg name="use_sim_time" value="$(arg use_sim_time)"/>
    <arg name="headless" value="$(arg headless)"/>
    <arg name="verbose" value="$(arg verbose)"/>
  </include>

  <!-- ==================== 在Gazebo中生成机器人模型 ==================== -->
  <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model"
        respawn="false" output="screen"
        args="-urdf -model hero_robot -param robot_description 
              -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) 
              -R $(arg R_pos) -P $(arg P_pos) -Y $(arg Y_pos)"/>

  <!-- ==================== TF树发布节点（关键） ==================== -->
  <!-- robot_state_publisher: 根据 robot_description 和 joint_states 发布 TF 树 -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
        respawn="false" output="screen">
    <param name="publish_frequency" type="double" value="50.0"/>
  </node>

  <!-- joint_state_publisher: 发布关节状态（joint_states话题） -->
  <!-- 如果没有控制器发布joint_states，这个节点会发布默认值，保证TF树完整 -->
  <node if="$(arg use_joint_state_publisher)" 
        name="joint_state_publisher" 
        pkg="joint_state_publisher" 
        type="joint_state_publisher" 
        output="screen">
    <param name="use_gui" value="false"/>
  </node>

  <!-- ==================== 启动RViz可视化 ==================== -->
  <group if="$(arg is_open_rviz)">
    <node name="rviz" pkg="rviz" type="rviz" 
          args="-d $(arg rvizconfig)"
          launch-prefix="bash -c 'sleep 2; $0 $@' "
          output="screen"/>
  </group>

  <!-- ==================== Ground Truth 里程计（可选） ==================== -->
  <!-- 从 /gazebo/model_states 获取真实位姿，发布到 /odom_ground_truth 和 TF -->
  <!-- 用于消除轮式里程计的累积漂移，特别适合调试全局速度模式 -->
  <group if="$(arg use_ground_truth_odom)">
    <node pkg="mecanum_ppo_avoidance" type="gazebo_odom_bridge" name="gazebo_odom_bridge" output="screen">
      <param name="model_name" value="hero_robot"/>
      <param name="base_link_frame" value="base_link"/>
      <param name="odom_frame" value="odom"/>
    </node>
  </group>
  
</launch>