<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <!-- 同时启动Gazebo和RViz -->
  
  <!-- 启动Gazebo仿真 -->
  <include file="$(find mecanum_ppo_avoidance)/launch/gazebo.launch">
    <arg name="gui" value="true"/>
    <arg name="paused" value="false"/>
  </include>
  
  <!-- 延迟启动RViz（等待Gazebo加载） -->
  <node pkg="rviz" type="rviz" name="rviz" 
        args="-d $(find mecanum_ppo_avoidance)/rviz/mecanum_display.rviz"
        launch-prefix="bash -c 'sleep 3; $0 $@' "/>
  
</launch>
